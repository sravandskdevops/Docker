Dockerfile: Complete Jenkins DevOps Setup
vi Dockerfile 
# ---------------------------
# Base: Ubuntu + Java + Jenkins
# ---------------------------
FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

# Install base tools
RUN apt-get update && \
    apt-get install -y openjdk-17-jdk wget curl git gnupg sudo ca-certificates lsb-release unzip && \
    rm -rf /var/lib/apt/lists/*

# ---------------------------
# Install Jenkins
# ---------------------------
RUN wget -q -O - https://pkg.jenkins.io/debian/jenkins.io.key | apt-key add - && \
    sh -c 'echo deb https://pkg.jenkins.io/debian-stable binary/ > /etc/apt/sources.list.d/jenkins.list' && \
    apt-get update && \
    apt-get install -y jenkins && \
    rm -rf /var/lib/apt/lists/*

# ---------------------------
# Install Docker CLI
# ---------------------------
RUN apt-get update && \
    apt-get install -y docker.io && \
    usermod -aG docker jenkins && \
    rm -rf /var/lib/apt/lists/*

# ---------------------------
# Install Maven
# ---------------------------
RUN apt-get update && \
    apt-get install -y maven && \
    rm -rf /var/lib/apt/lists/*

# ---------------------------
# Install Node.js (LTS)
# ---------------------------
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get install -y nodejs && \
    rm -rf /var/lib/apt/lists/*

# ---------------------------
# Install Jenkins Plugins
# ---------------------------
# Preinstall common DevOps plugins (Git, Pipeline, Docker, Maven, Blue Ocean, etc.)
RUN jenkins-plugin-cli --plugins \
    "git:latest \
     workflow-aggregator:latest \
     docker-plugin:latest \
     docker-workflow:latest \
     maven-plugin:latest \
     blueocean:latest \
     credentials-binding:latest \
     configuration-as-code:latest"

# ---------------------------
# Set up Jenkins permissions
# ---------------------------
RUN usermod -aG sudo jenkins

# Expose Jenkins Web and Agent Ports
EXPOSE 8080 50000

# Start Jenkins
CMD ["java", "-jar", "/usr/share/jenkins/jenkins.war"]
=====================================================================================
# Build the image
docker build -t myjenkins:devops-full .

# Run Jenkins container
docker run -d \
  -p 8080:8080 -p 50000:50000 \
  --name jenkins-devops \
  -v jenkins_home:/var/lib/jenkins \
  -v /var/run/docker.sock:/var/run/docker.sock \
  myjenkins:devops-full
=======================================================================================
http://<your-ec2-public-ip>:8080
docker exec -it jenkins-devops cat /var/lib/jenkins/secrets/initialAdminPassword
===================================================================================== end 
