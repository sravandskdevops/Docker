const app = express();
const PORT = process.env.PORT || 3000;

app.get('/', (req, res) => {
  res.send('ðŸš€ Hello from Node.js App â€” Deployed via Jenkins CI/CD!');
});

app.listen(PORT, () => {
  console.log(`âœ… Server running on port ${PORT}`);
});
